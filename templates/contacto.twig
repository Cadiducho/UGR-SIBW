{% extends "layout.twig" %}

{% block titulo %} Conocenos {% endblock %}

{# Cargar el head normal y añadir el css #}
{% block head %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="css/conocenos.css" media="screen"/>
{% endblock %}

{% block mainContent %}
<h2 class="main-title">{{ contacto.titulo }} </h2>
<section class="content-event">
    <!-- Texto -->
    <h3 class="organizer-event">{{ contacto.subtitulo }}</h3>
    <p class="text-event">
      {{ contacto.informacion_general|nl2br }} {# nl2br insertará saltos de línea #}
    </p>
    <!-- Fin texto del evento -->
    <div class="texto-general">
      <div class="texto-izq">
        <img src="{{ contacto.imagen_izquierda }}" width="100">
      </div>
      <div class="texto-der">
        <img src="{{ contacto.imagen_derecha }}" width="100">
      </div>
    </div>
</section>
{% endblock %}
