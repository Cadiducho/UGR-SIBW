<section class="adminSection">
    <p class="title">Eventos</p>


    <input type="text" id="inputBuscarEventos" onkeyup="buscarEventos()" class="buscaTabla" placeholder="Busca eventos">
    <table class="table hoverable fullwidth" id="tablaEventos">
        <thead>
            <tr>
            <th>#id</th>
            <th>Nombre</th>
            <th>Imagen</th>
            <th>Organizador</th>
            <th>Fecha</th>
            <th>Acciones</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
            <th>#id</th>
            <th>Nombre</th>
            <th>Imagen</th>
            <th>Organizador</th>
            <th>Fecha</th>
            <th>Acciones</th>
            </tr>
        </tfoot>
        <tbody>
            {% for evento in eventos %}
                <tr>
                    <th>{{ evento.id }}</th>
                    <td>{{ evento.nombre }}</td>
                    <td>{{ evento.imagen }}</td>
                    <td>{{ evento.organizador }}</td>
                    <td>{{ evento.fecha }}</td>
                    <td>
                        <a href="http://localhost/evento.php?id={{ evento.id }}" style="text-decoration: none!important;">
                            <i class="icono-chain link"></i>
                        </a>
                        <a onclick="showEditComentarioModal({{ comentario.id }},{{ comentario.mensaje|json_encode }});" style="text-decoration: none!important;">
                            <i class="icono-sliders edit"></i>
                        </a>
                        <a onclick="deleteComentario({{ comentario.id }})" style="text-decoration: none!important;">
                            <i class="icono-cross remove"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
      </table>
</section>
